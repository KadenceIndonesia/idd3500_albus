<!DOCTYPE html>
<html>
<head>
	<title>Dashboard - Festive <%= login[0].pid %></title>
    <link rel = "icon" href = "https://kadence.com/wp-content/uploads/2020/07/260x260.png" type = "image/x-icon">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<script src="<%= baseurl() %>plugin/flexmonster/theme/green/flexmonster.css"></script>
    <%- include ('./partials/header') %>
</head>
<style>
    .overview{
        padding: 10px 30px;
        background-color: #ffffff;
        border-radius: 8px;
    }
</style>
<body>
<div class="wrapper">
	<div class="lSide">
		<%- include ('./partials/sidebar') %>
	</div>
	<div class="rSide">
		<div class="head desk">
			<%- include ('./partials/topdesk') %>
		</div>
		<div class="mainbox size-std column">
			<div class="breadcrumbs size-std">
				<a href="<%= baseurl() %>">DASHBOARD <%= login[0].nameses %></a> > <a href="<%= baseurl() %>report/detail">List Cabang</a> > <%= idc %>
			</div>
			<div class="cols-12">
				<!-- Tabgrid -->
                <div class="full-length containt" style="margin-top: 20px;">
                    <div class="tabgrid full-length">
                        <ul>
							<% 
								for(let i=0;i < data[0].filename.length ; i++){ 
									var active
									if(i=0){
										active = "active"
									}
							%>
								<li class="thistab delay <%= active %>" data="video<%= i+1 %>" data-target="<%= i %>">Video <%= i+1 %></li>
							<% } %>
                        </ul>
                        <div class="selectorline"></div>
                    </div>
                    <div class="full-length tabgridwrap">
                        <div class="tabgridcontent">
							<% 
								for(let i=0;i < data[0].filename.length ; i++){ 
									var active
									if(i=0){
										active = "active"
									}
							%>
                            <div class="gridcontent active delay" id="video<%= i+1 %>" data="1">
								<div style="width: 100%; padding: 10px; text-align: center;">
									<video id="videoplayer" width="100%" height="520" controls style="margin-top: 30px">
										<source src="http://apps.kadence.co.id/kepo/files/<%= data[0].id %>/<%= data[0].filename[i] %>" type="video/mp4">
										  Your browser does not support the video tag.
									</video>
                                </div>
							</div>
							<% } %>
                        </div>
                    </div>
                </div>
                <!-- Tabgrid -->
			</div>
		</div>
	</div>
</div>
</body>
<%- include ('./partials/footer') %>
<script src="https://canvasjs.com/assets/script/jquery.canvasjs.min.js"></script>
</html>